# 麦麦主程序配置
HOST=127.0.0.1
PORT=8088

# 数据库配置（供 maim_db 使用）
DATABASE_URL=sqlite:///data/MaiBot.db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=maimbot
DATABASE_USER=postgres
DATABASE_PASSWORD=

# 日志与调试级别
MAIMBOT_LOG_LEVEL=INFO
MAIMBOT_CONSOLE_LOG_LEVEL=INFO
MAIMBOT_FILE_LOG_LEVEL=DEBUG

# maim_message 服务器配置 (迁移自 config.toml)
MAIM_MESSAGE_HOST=127.0.0.1
MAIM_MESSAGE_PORT=8090
MAIM_MESSAGE_PATH=/api/message/v1
MAIM_MESSAGE_MODE=ws

# SSL 配置
MAIM_MESSAGE_USE_WSS=false
MAIM_MESSAGE_SSL_CERT=
MAIM_MESSAGE_SSL_KEY=
MAIM_MESSAGE_SSL_CA=
MAIM_MESSAGE_SSL_VERIFY=true

# 日志
MAIM_MESSAGE_LOG_CONNECTION=true
MAIM_MESSAGE_LOG_MESSAGE=true

# MaimConfig 地址 (用于鉴权和API Key解析)
MAIMCONFIG_URL=http://127.0.0.1:8000
MAIMCONFIG_TIMEOUT=30
MAIMCONFIG_RETRY=3

# WebUI 独立服务器配置
WEBUI_ENABLED=true
WEBUI_MODE=production   # 模式: development(开发) 或 production(生产)
WEBUI_HOST=0.0.0.0      # WebUI 服务器监听地址
WEBUI_PORT=8001         # WebUI 服务器端口